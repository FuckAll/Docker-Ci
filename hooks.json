[
  {
    "id": "pull_request",
    "execute-command": "/app/Docker-Ci",
    "command-working-directory": "/ci/",
    "pass-arguments-to-command":
    [
      {
        "source": "payload",
        "name": "pull_request.head.repo.ssh_url"
      },
      {
        "source": "payload",
        "name": "pull_request.head.repo.full_name"
      }
    ],
    "trigger-rule":
    {
      "and":
      [
        {
          "match":
          {
            "type": "payload-hash-sha1",
            "secret": "qHs99apc2HzW3QjXCih",
            "parameter":
            {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        },
        {
          "match":
          {
            "type": "value",
            "value": "opened",
            "parameter":
            {
              "source": "payload",
              "name": "action"
            }
          }
        }
      ]
    }
  }
]
